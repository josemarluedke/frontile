<FormRadio
  @onChange={{this.handleChange}}
  @checked={{this.value}}
  @hint={{@hint}}
  @value={{@value}}
  @name={{@name}}
  @containerClass={{@containerClass}}
  @size={{@size}}
  ...attributes
  {{on "blur" this.validate}}
>
  {{#if (has-block)}}
    {{yield}}
  {{else}}
    {{@label}}
  {{/if}}
</FormRadio>