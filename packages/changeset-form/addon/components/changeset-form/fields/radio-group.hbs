<FormRadioGroup
  @onChange={{this.handleChange}}
  @value={{this.value}}
  @errors={{this.errors}}

  @label={{@label}}
  @hint={{@hint}}
  @hasSubmitted={{@hasSubmitted}}
  @hasError={{@hasError}}
  @showError={{@showError}}
  @containerClass={{@containerClass}}
  @size={{@size}}
  @isInline={{@isInline}}

  ...attributes
  as |Radio|
>
  {{yield Radio}}
</FormRadioGroup>
